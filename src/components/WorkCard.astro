---
const { title, category, videoUrl } = Astro.props;
---

<div
  class="group relative overflow-hidden border border-[#0B0B0B]/20 hover:border-[#0B0B0B] transition-all duration-300 cursor-pointer bg-[#0B0B0B]/10 backdrop-blur-sm"
  onclick={videoUrl
    ? `window.open('${videoUrl}', '_blank')`
    : `alert('Add video URL for: ${title}')`}
>
  <div
    class="aspect-video bg-gradient-to-br from-[#0B0B0B]/40 to-[#0B0B0B]/20 flex items-center justify-center relative overflow-hidden"
  >
    <div
      class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-30"
    >
    </div>
  </div>

  <div
    class="p-6 bg-[#0B0B0B]/20 backdrop-blur-sm border-t border-[#0B0B0B]/10"
  >
    <div class="flex items-start justify-between gap-4 mb-2">
      <h3
        class="text-xl text-[#0B0B0B] group-hover:text-[#0B0B0B] transition-colors"
      >
        {title}
      </h3>
    </div>
    <p class="text-[#0B0B0B]/60 text-sm">{category}</p>
  </div>
</div>
