---
interface Props {
  image_Url?: string;
  name: string;
  job_Designation: string;
}
const { image_Url = "", name, job_Designation } = Astro.props;
---

<!-- User Info -->
<div class="flex flex-row items-center gap-6 rounded-full">
  <div class="size-16 overflow-hidden rounded-full border lg:size-20">
    <!-- User Image -->
    <img
      src={image_Url !== "" ? image_Url : "/images/default-profile.png"}
      alt={`image of the ${name}`}
      class="object-contain"
    />
  </div>
  <div
    class="flex flex-1 flex-col gap-1 leading-tight font-medium tracking-normal"
  >
    <!--User Details  -->
    <p class="text-lg leading-tight font-medium md:text-xl lg:text-2xl">
      {name}
    </p>
    <p class="text-sm leading-tight font-medium md:text-base lg:text-lg">
      {job_Designation}
    </p>
  </div>
</div>
