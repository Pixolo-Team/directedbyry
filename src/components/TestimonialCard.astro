---
import UserInfo from "./UserInfo.astro";

const { image_Url, name, job_Designation, description } = Astro.props;
---

<div class="flex flex-col bg-n-900 text-n-50 gap-5 rounded-3xl p-6">
  <!-- User Details -->
  <UserInfo
    image_Url={image_Url}
    name={name}
    job_Designation={job_Designation}
  />

  <!-- Description -->
  <p class="font-sans font-extralight text-sm md:text-base lg:text-lg leading-relaxed">
    {description}
  </p>
</div>
