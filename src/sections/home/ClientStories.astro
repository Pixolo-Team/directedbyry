---

<section class="py-32 px-6 bg-[#0B0B0B] overflow-hidden">
  <div>
    <div class="mb-20 text-center max-w-7xl mx-auto">
      <p class="font-poppins text-2xl text-[#C6A84A] tracking-[0.2em] uppercase mb-4">
        Trusted By
      </p>
      <h2 class="font-clash text-4xl md:text-5xl lg:text-6xl text-white mb-6">
        Stories We've Told.<br />Brands We've Defined.
      </h2>
      <div class="h-px w-24 bg-[#D4AF37] mx-auto"></div>
    </div>

    <!-- First Row - Scrolling Left to Right -->
    <div class="mb-8 relative overflow-hidden">
      <div class="scroll-row scroll-left flex gap-8">
        {
          brandFirstRow.map((brand) => (
            <div class="w-[200px] h-[150px] bg-[#FFFDE7] backdrop-blur-sm border border-[#D4AF37]/10 flex items-center justify-center hover:border-[#D4AF37]/30 transition-all duration-300 hover:scale-105 py-3 px-6 rounded-3xl">
              <img src={brand.image} alt={brand.name} class="object-contain" />
            </div>
          ))
        }
      </div>
    </div>

    <!-- Second Row - Scrolling Right to Left -->
    <div class="relative overflow-hidden">
      <div class="scroll-row scroll-right flex gap-8">
        {
          brandSecondRow.map((brand) => (
            <div class="w-[200px] h-[150px] bg-[#FFFDE7] backdrop-blur-sm border border-[#D4AF37]/10 flex items-center justify-center hover:border-[#D4AF37]/30 transition-all duration-300 hover:scale-105 py-3 px-6 rounded-3xl">
              <img src={brand.image} alt={brand.name} class=" object-contain" />
            </div>
          ))
        }
      </div>
    </div>
  </div>

  <style>
    /* Infinite scroll animations */
    @keyframes scrollLeft {
      0% {
        transform: translateX(0);
      }
      100% {
        transform: translateX(-50%);
      }
    }

    @keyframes scrollRight {
      0% {
        transform: translateX(-50%);
      }
      100% {
        transform: translateX(0);
      }
    }

    .scroll-row {
      width: max-content;
      display: flex;
      will-change: transform;
    }

    .scroll-left {
      animation: scrollLeft 60s linear infinite;
    }

    .scroll-right {
      animation: scrollRight 60s linear infinite;
    }

    /* Optional: Pause animation on hover for better UX */
    .scroll-row:hover {
      animation-play-state: paused;
    }
  </style>
</section>
