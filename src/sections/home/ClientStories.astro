---

<section class="overflow-hidden bg-[#0B0B0B] px-6 py-32">
  <div>
    <div class="mx-auto mb-20 max-w-7xl text-center">
      <p class="mb-4 text-2xl tracking-[0.2em] text-[#C6A84A] uppercase">
        Trusted By
      </p>
      <h2 class="mb-6 text-4xl text-white md:text-5xl lg:text-6xl">
        Stories We've Told.<br />Brands We've Defined.
      </h2>
      <div class="mx-auto h-px w-24 bg-[#D4AF37]"></div>
    </div>

    <!-- First Row - Scrolling Left to Right -->
    <div class="relative mb-8 overflow-hidden">
      <div class="scroll-row scroll-left flex gap-8">
        {
          brandFirstRow.map((brand) => (
            <div class="flex h-[150px] w-[200px] items-center justify-center rounded-3xl border border-[#D4AF37]/10 bg-[#FFFDE7] px-6 py-3 backdrop-blur-sm transition-all duration-300 hover:scale-105 hover:border-[#D4AF37]/30">
              <img src={brand.image} alt={brand.name} class="object-contain" />
            </div>
          ))
        }
      </div>
    </div>

    <!-- Second Row - Scrolling Right to Left -->
    <div class="relative overflow-hidden">
      <div class="scroll-row scroll-right flex gap-8">
        {
          brandSecondRow.map((brand) => (
            <div class="flex h-[150px] w-[200px] items-center justify-center rounded-3xl border border-[#D4AF37]/10 bg-[#FFFDE7] px-6 py-3 backdrop-blur-sm transition-all duration-300 hover:scale-105 hover:border-[#D4AF37]/30">
              <img src={brand.image} alt={brand.name} class="object-contain" />
            </div>
          ))
        }
      </div>
    </div>
  </div>

  <style>
    /* Infinite scroll animations */
    @keyframes scrollLeft {
      0% {
        transform: translateX(0);
      }
      100% {
        transform: translateX(-50%);
      }
    }

    @keyframes scrollRight {
      0% {
        transform: translateX(-50%);
      }
      100% {
        transform: translateX(0);
      }
    }

    .scroll-row {
      width: max-content;
      display: flex;
      will-change: transform;
    }

    .scroll-left {
      animation: scrollLeft 60s linear infinite;
    }

    .scroll-right {
      animation: scrollRight 60s linear infinite;
    }

    /* Optional: Pause animation on hover for better UX */
    .scroll-row:hover {
      animation-play-state: paused;
    }
  </style>
</section>
