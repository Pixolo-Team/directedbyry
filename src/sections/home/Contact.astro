---
import { Phone, Mail, Instagram, Youtube, Linkedin } from "@lucide/astro";
---

<section id="contact" class="bg-[#C6A84A] px-6 py-32">
  <div class="mx-auto max-w-4xl text-center">
    <div class="mb-16">
      <p class="mb-4 text-2xl tracking-[0.2em] text-white uppercase">
        Get In Touch
      </p>
      <h2 class="mb-6 text-4xl text-[#0B0B0B] md:text-5xl lg:text-6xl">
        Let's Create Something Remarkable
      </h2>
      <div class="mx-auto h-px w-24 bg-[#0B0B0B]"></div>
    </div>

    <div class="mb-16 space-y-8">
      <a
        href="tel:+919870892505"
        class="group flex items-center justify-center gap-4 text-2xl text-[#0B0B0B] transition-all hover:scale-105 hover:text-[#0B0B0B]/70"
      >
        <!-- Phone icon -->
        <Phone class="h-6 w-6" />
        +91 9870892505
      </a>

      <a
        href="mailto:hello@rymarkfilms.com"
        class="group flex items-center justify-center gap-4 text-2xl text-[#0B0B0B] transition-all hover:scale-105 hover:text-[#0B0B0B]/70"
      >
        <!-- Mail icon -->
        <Mail class="h-6 w-6" />
        hello@rymarkfilms.com
      </a>
    </div>

    <div class="flex justify-center gap-8">
      <a
        href="https://instagram.com/directedbyry"
        target="_blank"
        rel="noopener noreferrer"
        class="flex h-12 w-12 items-center justify-center rounded-full text-[#0B0B0B] transition-all hover:scale-110 hover:bg-[#0B0B0B] hover:text-[#C6A84A]"
      >
        <!-- Instagram icon -->
        <Instagram class="h-5 w-5" />
      </a>

      <a
        href="https://youtube.com/@rymarkfilms"
        target="_blank"
        rel="noopener noreferrer"
        class="flex h-12 w-12 items-center justify-center rounded-full text-[#0B0B0B] transition-all hover:scale-110 hover:bg-[#0B0B0B] hover:text-[#C6A84A]"
      >
        <!-- YouTube icon -->
        <Youtube class="h-5 w-5" />
      </a>

      <a
        href="https://www.linkedin.com/company/rymarkfilmspvtltd/"
        target="_blank"
        rel="noopener noreferrer"
        class="flex h-12 w-12 items-center justify-center rounded-full text-[#0B0B0B] transition-all hover:scale-110 hover:bg-[#0B0B0B] hover:text-[#C6A84A]"
      >
        <!-- LinkedIn icon -->
        <Linkedin class="h-5 w-5" />
      </a>
    </div>

    <div class="mt-16">
      <p class="text-2xl text-white">www.rymarkfilms.com</p>
    </div>
  </div>
</section>
