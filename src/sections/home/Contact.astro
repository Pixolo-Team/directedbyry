---
import { Phone, Mail, Instagram, Youtube, Linkedin } from "@lucide/astro";
---

<section id="contact" class="py-32 px-6 bg-[#C6A84A]">
  <div class="max-w-4xl mx-auto text-center">
    <div class="mb-16">
      <p class="text-2xl text-[#0B0B0B]/60 tracking-[0.2em] uppercase mb-4">
        Get In Touch
      </p>
      <h2 class="text-4xl md:text-5xl lg:text-6xl text-[#0B0B0B] mb-6">
        Let's Create Something Remarkable
      </h2>
      <div class="h-px w-24 bg-[#0B0B0B] mx-auto"></div>
    </div>

    <div class="space-y-8 mb-16">
      <a
        href="tel:+919870892505"
        class="flex items-center justify-center gap-4 text-2xl text-[#0B0B0B] hover:text-[#0B0B0B]/70 transition-all group hover:scale-105"
      >
        <!-- Phone icon -->
        <Phone class="w-6 h-6" />
        +91 9870892505
      </a>

      <a
        href="mailto:hello@rymarkfilms.com"
        class="flex items-center justify-center gap-4 text-2xl text-[#0B0B0B] hover:text-[#0B0B0B]/70 transition-all group hover:scale-105"
      >
        <a
          href="mailto:hello@rymarkfilms.com"
          class="flex items-center justify-center gap-4 text-2xl text-[#0B0B0B] hover:text-[#0B0B0B]/70"
        >
          <!-- Mail icon -->
          <Mail class="w-6 h-6" />
          hello@rymarkfilms.com
        </a>
      </a>
    </div>

    <div class="flex justify-center gap-8">
      <a
        href="https://instagram.com/directedbyry"
        target="_blank"
        rel="noopener noreferrer"
        class="w-12 h-12 rounded-full bg-[#0B0B0B]/10 flex items-center justify-center text-[#0B0B0B] hover:bg-[#0B0B0B] hover:text-[#C6A84A] transition-all hover:scale-110"
      >
        <!-- Instagram icon -->
        <Instagram class="w-5 h-5" />
      </a>

      <a
        href="https://youtube.com/@rymarkfilms"
        target="_blank"
        rel="noopener noreferrer"
        class="w-12 h-12 rounded-full bg-[#0B0B0B]/10 flex items-center justify-center text-[#0B0B0B] hover:bg-[#0B0B0B] hover:text-[#C6A84A] transition-all hover:scale-110"
      >
        <!-- YouTube icon -->
        <Youtube class="w-5 h-5" />
      </a>

      <a
        href="https://linkedin.com/in/rymarkfilms"
        target="_blank"
        rel="noopener noreferrer"
        class="w-12 h-12 rounded-full bg-[#0B0B0B]/10 flex items-center justify-center text-[#0B0B0B] hover:bg-[#0B0B0B] hover:text-[#C6A84A] transition-all hover:scale-110"
      >
        <!-- LinkedIn icon -->
        <Linkedin class="w-5 h-5" />
      </a>
    </div>

    <div class="mt-16">
      <p class="text-2xl text-[#0B0B0B]/60">www.rymarkfilms.com</p>
    </div>
  </div>
</section>
